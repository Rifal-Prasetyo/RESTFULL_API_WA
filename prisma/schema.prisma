generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  noWa     String
  role     String    @default("user")
  password String
  time     DateTime
  pushes   ApiPush[]
  api      ApiKey?
}

model ApiPush {
  id       Int      @id @default(autoincrement())
  User_use User     @relation(fields: [user_id], references: [id])
  user_id  Int
  message  String
  toMsg    String
  time     DateTime
}

model ApiKey {
  id       Int  @id @default(autoincrement())
  User_use User @relation(fields: [user_id], references: [id])
  user_id  Int  @unique
  totalUse Int
}
